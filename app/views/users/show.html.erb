
<h3>Signed in as <em><%= current_user.name %></em></h3>
<% if @events%>
    
    <h2>Events created by You : </h2>
    
    <ol>
        <% @events.each do |e| %>
            <li> <%= link_to e.name, event_path(e) %> <%= e.date %>, <%= e.location %></li>
        <% end %>
    </ol>
<% end%>

<%if @past.any?%>
    <h2>Events attended : </h2>
    <ul>
        <% @past.each do |e| %>
            <li> <%= link_to e.name, event_path(e) %> <%= e.date %>, <%= e.location %></li>
        <% end %>
    </ul>
<% end %>
<%if @future.any?%>
    <h2>Events to attend : </h2>
    <ul>
        <% @future.each do |e| %>
            <li> <%= link_to e.name, event_path(e) %> <%= e.date %>, <%= e.location %></li>
        <% end %>
    </ul>
<% end %>